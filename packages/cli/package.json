  "author": "MitchForest",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MitchForest/context-layer.git"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "web-tree-sitter": "^0.26.3",
    "glob": "^10.3.10",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
